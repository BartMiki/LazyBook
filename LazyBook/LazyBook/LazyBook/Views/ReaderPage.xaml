<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LazyBook.Views.ReaderPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="speaker.png" Clicked="ReaderButton_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="5, 10 , 5, 0">
                <Label FontSize="18" Text="{Binding Item.Summary}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>